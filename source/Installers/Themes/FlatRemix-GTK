#!/bin/bash
packagetype="branch"
packageurl="https://github.com/daniruiz/flat-remix-gtk"
packageinstall() {
	if [[ ! -f "$HOME/.local/share/themes" ]]; then mkdir -p "$HOME/.local/share/themes"; fi
	sudo cp -r "themes/Flat-Remix"* "/usr/share/themes"
	if [[ -d "flat-remix-gnome" ]]; then rm -rf "flat-remix-gnome"; fi
	git clone "https://github.com/daniruiz/flat-remix-gnome"; cd "flat-remix-gnome" || exit
	sudo cp -r "themes/Flat-Remix"* "/usr/share/themes"
}
packageuninstall() {
	sudo rm -rf "/usr/share/themes/Flat-Remix"*
}
export packagetype
export packageurl
export -f packageinstall
export -f packageuninstall
